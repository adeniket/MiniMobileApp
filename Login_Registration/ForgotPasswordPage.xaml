<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_Registration.ForgotPasswordPage"
             Title="Forgot Password">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Label Text="Reset your password" FontSize="22" HorizontalOptions="Center" />
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="New Password (6-8 characters)" IsPassword="True" Text="{Binding NewPassword}" />
        <Entry Placeholder="Confirm New Password" IsPassword="True" Text="{Binding ConfirmPassword}" />
        <Label Text="{Binding Message}" TextColor="Red" />
        <Button Text="Save" Command="{Binding SaveCommand}" />
        <Button Text="Back" Command="{Binding BackCommand}" />
    </VerticalStackLayout>
</ContentPage>
