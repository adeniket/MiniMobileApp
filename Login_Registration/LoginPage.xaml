<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_Registration.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Label Text="Letâ€™s start the journey. Are you ready?" FontSize="22" HorizontalOptions="Center" />
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Label Text="Forgot Password?" TextColor="Blue" HorizontalOptions="End">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
            </Label.GestureRecognizers>
        </Label>
        <Label Text="{Binding LoginErrorMessage}" TextColor="Red" IsVisible="{Binding LoginErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
        <Label Text="{Binding LockoutMessage}" TextColor="Red" IsVisible="{Binding IsLocked}" />
        <Label Text="{Binding Countdown}" TextColor="Orange" IsVisible="{Binding IsLocked}" />
        <Button Text="Login" Command="{Binding LoginCommand}" IsEnabled="{Binding IsLocked, Converter={StaticResource InverseBoolConverter}}" />
        <Button Text="Register" Command="{Binding RegisterCommand}" />
    </VerticalStackLayout>
</ContentPage>