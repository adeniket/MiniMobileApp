<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_Registration.MainPage"
             Title="Dashboard">
    <VerticalStackLayout Spacing="30" Padding="30">
        <Label Text="{Binding WelcomeMessage}" FontSize="22" HorizontalOptions="Center" />
        <Label Text="{Binding LoginCount, StringFormat='Login count: {0}'}" FontSize="18" HorizontalOptions="Center" />
        <Button Text="Logout" Command="{Binding LogoutCommand}" />
    </VerticalStackLayout>
</ContentPage>
