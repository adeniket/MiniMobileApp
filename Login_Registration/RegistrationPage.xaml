<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_Registration.RegistrationPage"
             Title="Register">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Entry Placeholder="Full Name" Text="{Binding FullName}" />
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password (6-8 characters)" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Confirm Password (6-8 characters)" IsPassword="True" Text="{Binding ConfirmPassword}" />
        <Label Text="{Binding ValidationMessage}" TextColor="Red" />
        <Button Text="Submit" Command="{Binding SubmitCommand}" />
        <Button Text="Back" Command="{Binding BackCommand}" />
    </VerticalStackLayout>
</ContentPage>